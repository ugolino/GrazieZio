<div class="row">
  <div class="col-md-4">
  	<div class="panel ">
  		<div class="panel-heading">
  			<h2 class="text-center"><i class='fa fa-file-text-o'></i> To Do</h2>
    		<%= render @to_do %>
  		</div>
  	</div>
  </div>
  <div class="col-md-4">
  	  <div class="panel ">
  		<div class="panel-heading">
  	<h2 class="text-center"><i class='fa fa-play'></i> Doing</h2>
    <%= render @doing %>
    </div>
    </div>
  </div>
  <div class="col-md-4">
  	  	  <div class="panel ">
  		<div class="panel-heading">
  	<h2 class="text-center"><i class='fa fa-check'></i> Done</h2>
    <%= render @done %>
    </div>
    </div>
  </div>
</div>
<br>

<div class="btn-group ">
<%= link_to "<i class='fa fa-pencil'></i> Add Task".html_safe, new_task_path, class: "btn btn-sm btn-primary" %>
</div>



