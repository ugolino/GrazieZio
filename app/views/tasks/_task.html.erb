<div class="panel panel-info">
	<div class="panel-heading">
	
	added <%= time_ago_in_words(task.created_at) %> ago
	
	<%= link_to "delete", task_path(task), method: :delete, data: {confirm: "Task will be deleted! Are you sure?"}, class: "pull-right" %>

	</div>
	<%= link_to edit_task_path(task) do %>
	<div class="panel-body"><%= task.content %></div>
	<% end %>
 
	<div class="panel-footer text-center">
		<% if task.state == "doing" %>
		<div class="btn-group btn-group-justified">
		<%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-primary btn-md btn-block" %>
		<%= link_to "<i class='fa fa-check'></i>".html_safe, change_task_path(task, state: "done"), method: :put, class: "btn btn-primary btn-md btn-block" %>
		</div>
		<% elsif task.state == "done" %>
		<%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-primary btn-md btn-block" %>
		<% else %>
		<%= link_to "<i class='fa fa-check'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-primary btn-md btn-block" %>
		<% end %>
	</div>
</div>